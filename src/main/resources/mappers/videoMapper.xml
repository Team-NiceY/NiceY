<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.board.model.dao.VideoDao">
	<resultMap type="Video" id="videoMap">
		<result column="video_id" property="videoId"/>
		<result column="video_title" property="videoTitle"/>
		<result column="ch_name" property="chName"/>
		<result column="url" property="url"/>
		<result column="part" property="part"/>
		<result column="view_cnt" property="viewCnt"/>
	</resultMap>

	<!-- 전체글 조회 -->
	<select id="selectAll" resultType="Video">
		SELECT *
		FROM video
	</select>

	<!-- 상세글 조회 -->
	<select id="selectOne" resultMap="videoMap" parameterType="int">
		SELECT *
		FROM video
		WHERE video_id = #{id}
	</select>
	
	<!-- 조회수 증가 -->
	<update id="updateViewCnt" parameterType="int">
		UPDATE video
		SET view_cnt = view_cnt+1
		WHERE video_id = #{videoId}
	</update>
	
	<!-- 검색기능  -->
	<select id="search" resultMap="videoMap" parameterType="SearchCondition">
		SELECT *
		FROM video
		<!-- 검색 조건 (동적쿼리)-->
		<if test="key != 'none'">
			WHERE ${key} LIKE concat('%', #{word}, '%')
		</if>
		<!-- 어떤 기준으로 어떤 방향으로 정렬 -->
		<if test="orderBy != 'none'">
			ORDER BY ${orderBy} ${orderByDir}
		</if>
	</select>
	
	
	
	
	
	
	
	
	
	




</mapper>